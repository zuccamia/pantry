<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div class="navbar-brand-name">
    <%= link_to item_amounts_path, class: "navbar-brand" do %>
      <%= image_tag "pantry-logo-pic.png" %>
    <% end %>
  </div>
  <h3 class="navbar-brand-name">Pantry</h3>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <%= cl_image_tag current_user.photo.key, class: "avatar" %>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if user_signed_in? %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>