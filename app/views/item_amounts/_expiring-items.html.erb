  <% @item_amounts.each do |item_amount| %>
  <% if item_amount.expired? %>
    <div class="card-pantry-item">
      <div class="card-pantry-item-name <%= item_amount.expired? ? "card-pantry-item-expired" : "" %>">
        <h5><%= item_amount.item.item_name %></h5>
        <div class="tag-search">
          <div>
            <% if item_amount.expiry_date.present? %>
              <p>Expires: <%= item_amount.expiry_date %></p>
            <% end %>
          </div>
          <%= link_to recipes_path(tag: item_amount.item.item_name.downcase) do %>
            <p><i class="fas fa-search"></i></p>
          <% end %>
        </div>
      </div>
      <div class="card-pantry-item-amount <%= item_amount.expired? ? "card-pantry-item-expired" : "" %>">
        <h5><%= item_amount.description.to_s %></h5>
        <%= link_to item_amount_path(item_amount), method: :delete, data: { confirm: "Item used up?" }, class: "text-secondary" do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>