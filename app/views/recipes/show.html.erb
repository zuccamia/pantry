<div class="container">
  <div class="grid">
    <div class="recipe-card-item">
      <div class="recipe-card-photo">
        <%= image_tag "choco-fudge.jpg", class: "recipe-card-photo" %>
      </div>
      <div class="recipe-card-body">
        <div class="recipe-card-title">
          <h5><%= @recipe.recipe_name.capitalize %></h5>
        </div>
        <div class="recipe-card-content">
          <p class="recipe-card-edit"><i class="far fa-edit"></i></p>
          <div class="recipe-ingredient-amount">
            <h5>Ingredients</h5>
          </div>
          <div class="recipe-card-content">
            <h5>Instructions</h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>