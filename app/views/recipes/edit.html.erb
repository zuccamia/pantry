<div class="container">
  <div>
    <%= simple_form_for @recipe do |f| %>
      <%= f.input :recipe_name %>
      <%= f.input :instructions %>
      <%= f.input :tag_list, placeholder: "Separate tags with a comma." %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class: 'btn btn-secondary' %>
    <% end %>
  </div>
</div>