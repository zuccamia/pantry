          <%#= link_to_add_association ('<i class="material-icons-outlined">add_circle_outline</i>').html_safe, f, :recipe_amounts, data: { association_insertion_method: :append } %>
          <%#= f.simple_fields_for :recipe_amounts do |builder| %>
            <%#= render 'recipe_amount_form', f: builder %>
          <%#ÃŸ end %>
        </div-->
          <h5>Instructions</h5>
          <div class="recipe-form">
            <%= f.input :instructions, label: false %>
          </div>
          <h5>Photo</h5>
          <%= f.input :photo, as: :file, label: false %>
          <%= f.input :status, label: 'Sharing options', as: :radio_buttons, collection: Recipe.statuses.keys %>
          <%= f.submit class: 'btn action-button-solid' %>
        <% end %>
      </div>
    </div>
  </div>
</div>