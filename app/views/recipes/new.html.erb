<div class="container">
  <h5 class="page-title-recipe">What's on the menu?</h5>
  <div class="form-container">
    <div class="grid">
      <%= simple_form_for @recipe do |f| %>
        <%= f.input :recipe_name %>
        <%= f.input :instructions %>
        <%= f.input :tag_list, placeholder: "Separate tags with comma." %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>