<div class="container">
  <h4 class="page-title-recipe">Add your favorite recipe</h4>
  <div class="grid">
    <div class="form">
      <h5>Recipe overview</h5>
      <div class="recipe-form">
        <%= simple_form_for @recipe do |f| %>
          <%= f.input :recipe_name, placeholder: "Egg Scramble" %>
          <%= f.input :instructions, placeholder: "1. Bring a small pot of salted water to a boil.

2. Add potato and cook until tender but still firm, about 15 minutes." %>
          <%= f.input :tag_list, placeholder: "Egg, Onion, (Separate tags with comma)" %>
          <%= f.input :photo, as: :file %>
        </div>
        <h5>List ingredients</h5>
        <div class="recipe-form">
          <%= link_to_add_association ('<i class="material-icons-outlined">add_circle_outline</i>').html_safe, f, :recipe_amounts, data: { association_insertion_method: :append } %>
          <%= f.simple_fields_for :recipe_amounts do |builder| %>
            <%= render 'recipe_amount_fields', f: builder %>
          <% end %>
        </div>
        <%= f.submit class: 'btn action-button-solid' %>
      <% end %>
    </div>
  </div>
</div>